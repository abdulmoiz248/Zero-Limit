{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/page.tsx", "src/components/3dModel.tsx", "src/components/Tiger.tsx", "src/components/buttons/DanceButton.tsx", "src/helper/cart.ts", "src/components/landing page/CategoriesCarouse.tsx", "src/app/(pages)/Product/[id]/ProductClient.tsx"],
  "exclude": ["node_modules"],
  
}
