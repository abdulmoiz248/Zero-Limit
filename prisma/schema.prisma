datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  fullName   String
  otp        String?  // Optional field to store OTP
  isVerified Boolean  @default(false)  // Tracks if the customer is verified
  createdAt  DateTime @default(now())
}


model Review {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  body      String
  date      DateTime @default(now())
  rating    Int
  productId String

}



model Member {
  id       Int      @id @default(autoincrement())
  email    String   @unique
}
